  <div class="d-flex">
    <div class="d-flex checkin-card section round shadow">
      <div class="right checkin-card-content">
        <ul>
          <% checkin.connections.each do |c| %>
            <li>
              <%= link_to(connection_path(c)) do %>
                <%= cl_image_tag c.photo, height: 60, width: 60, crop: :scale, class: "checkin-av" %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <p><%= "#{checkin.description} - #{date_display(checkin.time, missing = "Never")}" %></p>
      </div>
    </div>
  </div>
