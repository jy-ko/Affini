<div class="modal fade" id="editCheckinModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header modal-header-bg">
        <h5 class="modal-title" id="exampleModalLabel"><strong>Update a check-in</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body modal-bg">
        <%= simple_form_for [@checkin] do |f| %>
          <%= f.input :description %>
          <%= f.input_field :completed, as: :boolean %>
        <% end %>
      </div>
    </div>
  </div>
</div>
