<%= simple_form_for [@user, @connection] do |f| %>
  <%= f.input :first_name, input_html: { require: true } %>
  <%= f.input :last_name, input_html: { require: true } %>
  <%= f.input :description %>
  <%= f.input :email %>
  <%= f.input :facebook %>
  <%= f.input :linkedin %>
  <%= f.input :instagram %>
  <%= f.input :twitter %>
  <%= f.submit "Submit", :class => "btn btn-primary" %>
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
<% end %>
