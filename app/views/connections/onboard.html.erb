<div class="gradient-bg d-flex">
  <%= render 'shared/vnav'%>

  <div class="content pr-5" style="overflow: hidden;">
    <div class="breadcrumbs">
        <%= link_to "Dashboard", root_path %> >> <%= link_to "Connections", connections_path %>
    </div>
    <div class="d-flex align-items-center justify-content-between onboard-title">
      <h1 id="connections-onboard-count" class="text-white"><%= pluralize_with_no("Pending Connection", @connections.count).titleize %></h1>
      <%= render "shared/connectionmodal" %>
      <%= link_to "New connection +", "#connectionModal", "data-toggle" => "modal", class: "btn-white" %>
    </div>
    <div id="connections-onboard-section">
      <%= render 'connections/onboard/section', connections: @connections %>
    </div>
  </div>
</div>
