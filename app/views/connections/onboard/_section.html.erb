<% if connection %>
<p class="text-white">Here are your most recently imported potential connections. You can select their check-in frequency or save them for later. </p>
  <div class="top-connection-interface d-flex justify-content-between align-items-center">
    <%= render 'connections/onboard/left_form', connection: connection %>
    <div class="slide-in-blurred-bottom">
      <%= link_to connection_path(connection) do %>
        <%= render 'shared/connection_card', connection: connection %>
      <% end %>
    </div>
    <%= render 'connections/onboard/right_form', connection: connection %>
  </div>
<% end %>
